<% include ./partials/head %>

<% include ./partials/header %>
<!--<%= data %>-->
<a id='convert-times' onclick='convertTimes([<%= times %>])' hidden></a>
<div class="my ui three small grey statistics">
<div class="statistic">
    <div class="value">
    	<%= Math.min(...temperature) %> - <%= Math.max(...temperature) %> 
    </div>
    <div class="label">
      VALUE 1
    </div>
  </div>
  <div class="statistic">
    <div class="value">
	<%= Math.min(...humidity) %> - <%= Math.max(...humidity) %>  
  </div>
    <div class="label">
       VALUE 2
    </div>
  </div>
  <div class="statistic">
    <div class="value">
	<%= Math.min(...brightness) %> - <%= Math.max(...brightness) %>    
    </div>
    <div class="label">
       VALUE 3
    </div>
  </div>
</div>
<div class='my ui segment'>
	<div class='ui tabular menu'> 
		<a id ='first-chart' class='active item' onclick='showLineChart(this, [<%= temperature %>])'>
			Value 1
		</a>
		<a class='item' onclick='showLineChart(this, [<%= humidity %>])'>
			Value 2
		</a>
		<a class='item' onclick='showLineChart(this, [<%= brightness %>])'>
			Value 3
		</a>
	</div>
	<canvas></canvas>
</div>
<div class='my ui grid'>
	<div class='my six wide column'>
		<h3 class='bg-blue table lable'>History</h3>
		<div class='table wrapper'>
			<table class='ui table'>
				<thead>
					<th>Timestamp</th>
					<th>Value 1</th>
					<th>Value 2</th>
					<th>Value 3</th>
				</thead>
				 <% data.forEach( function(reading, i) { %>
					<tr>
						<td class='date'></td>
						<td><%= reading.temperature %></td>
						<td><%= reading.humidity %></td>
						<td><%= reading.brightness %></td>
					</tr>
				 <% }) %>
			</table>
	    </div> 
	</div>
</div>

  <script type="text/javascript" src='/js/details.js'></script>
<% include ./partials/foot %>
